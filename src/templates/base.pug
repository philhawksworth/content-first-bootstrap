doctype html
html
  head
    meta(name='viewport', content='width=device-width, initial-scale=1')
    meta(http-equiv='Content-Type', content='text/html; charset=utf-8')
    link(rel='stylesheet', href='/style/base.css')
    title= locals.title

  body
    div.page-purpose
      div.container.hide
        code= locals.url
        h1= locals.title
        h2.tag-line Page Purpose â€“
        div!= md(locals.pagePurpose)
      a.page-purpose__toggle(href='#') Toggle info
    
    div.container
      header
        ul.navigation
          each item in locals.site.pages
            li.main-nav__item
              a.main-nav__link(href=item.url)= item.title

      each item in locals.contentSections
        - var sectionClass = locals.url.split("/")[1] + "__" + item.name.replace(/ /gi,"-") + " quiet";
        section(class=sectionClass)
          p.meta Section: #{item.name}
          div!= md(item.content)


    script(type='text/javascript', src='/scripts/scaffold-controls.js')